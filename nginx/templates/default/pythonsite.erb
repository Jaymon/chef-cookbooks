##
# this is a default config file for a simple python site
##

<% if @params[:ssl_enabled] %>
ssl_certificate       <%= @params[:ssl_certificate] %>;
ssl_certificate_key   <%= @params[:ssl_certificate_key] %>;
<% end %>

#server {
#  listen  80;
